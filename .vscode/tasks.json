{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "npm",
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "build",
            "args": ["run", "build"],
            "isBuildCommand": true
        },
        {
            "taskName": "start",
            "args": ["run", "start"]
        },
        {
            "taskName": "develop",
            "args": ["run", "develop"]
        },
        {
            "taskName": "lint",
            "args": ["run", "lint"]
        },
        {
            "taskName": "scan",
            "args": ["run", "scan"]
        }
    ]
}
